#include <iostream>
#include <cstdlib>
using namespace std;

int main() {
   setlocale(LC_ALL, "Russian");

    int type, height;
    char texture;

    cout << "[ + ] Фигура: \"Треугольник\"\n" << endl;
    cout << "[ 1 ] Заполненный" << endl;
    cout << "[ 2 ] Пустой" << endl;
    cout << "\n[ + ] Выберите тип: ";
    cin >> type;

    cout << "\n[ + ] Размер: ";
    cin >> height;

    cout << "\n[ + ] Текстура: ";
    cin >> texture;

    cout << "\n[ + ] Результат:\n" << endl;

    for (int i = 1; i <= height; i++) {
        for (int j = 0; j < height - i; j++) {
            cout << " ";
        }

        if (type == 1) {
            for (int j = 0; j < 2 * i - 1; j++) {
                cout << texture;
            }
        }
        else {
            for (int j = 0; j < 2 * i - 1; j++) {
                if (j == 0 || j == 2 * i - 2 || i == height) {
                    cout << texture;
                }
                else {
                    cout << " ";
                }
            }
        }
        cout << endl;
    }

    cout << endl;

    return 0;
}
